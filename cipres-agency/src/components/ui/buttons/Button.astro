---
import type { HTMLAttributes } from 'astro/types';
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';

const buttonVariants = cva(
  'inline-flex items-center justify-center gap-2 cursor-pointer outline-none focus-visible:ring-2 focus-visible:ring-offset-2 focus-visible:ring-secondary disabled:pointer-events-none disabled:opacity-50 transition-all duration-300 font-grotesk font-normal tracking-wider',
  {
    variants: {
      variant: {
        primary:
          'bg-secondary hover:bg-primary text-white rounded-full border border-transparent hover:border-accent transition-colors duration-300',
        secondary:
          'bg-primary hover:bg-secondary text-white rounded-full border border-white/20 hover:border-transparent transition-colors duration-300',
        outline:
          'bg-transparent border-2 border-secondary hover:bg-secondary text-accent hover:text-white rounded-full transition-all duration-300',
        ghost: 'bg-transparent text-white hover:text-secondary transition-colors duration-300',
      },
      size: {
        none: 'px-0 py-2',
        sm: 'px-4 py-2 text-xs md:text-sm',
        md: 'px-6 py-2.5 text-sm md:text-base',
        lg: 'px-8 py-3 text-base md:text-lg',
        xl: 'px-12 py-4 text-lg md:text-xl',
        icon: 'p-2 size-10',
      },
    },
    defaultVariants: {
      variant: 'primary',
      size: 'md',
    },
  },
);

interface Props
  extends HTMLAttributes<'button'>, Omit<HTMLAttributes<'a'>, 'type'>, VariantProps<typeof buttonVariants> {
  href?: string;
}

const { variant, size, class: className, href, ...rest } = Astro.props;

const Tag = href ? 'a' : 'button';
---

<Tag class={cn(buttonVariants({ variant, size }), className)} href={href} {...rest}>
  <slot />
</Tag>
